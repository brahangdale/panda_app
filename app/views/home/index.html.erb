<div class="row">
	<div class="col-md-12">
		<div class="col-md-8">
 			<% @posts.each do |post| %>
				<div  class="well">
					<% if post.image.present? %>
					<div class="style_image">
						<%= image_tag(post.image.url) %></div>
					<% else %>
					<div class="style_image">
						<%= image_tag('dummy_img.png') %></div>
					<% end %>
						<h1><%=  post.title %></h1><br>
						<p><%= post.description %></p>
				</div>
			<% end %>
		</div>
		<div  class="col-md-4">
		</div>
	</div>
</div>