<div class="well">
  
  <h1>Profile Information</h1>
  <div class="row">
    <%= form_for(current_user, as: 'user', url: user_path(current_user)) do |f| %>
      <div class="pull-left image-img">
        <%= image_tag(current_user.image.url)  %></div>
        <%=link_to 'Edit', edit_user_path , :style => "margin: 10px;" %><br>
        <div class="field">
        <%= f.file_field :image %>
        </div>
  </div> 
<br>
<div class="well well_edit">      
    <div class="form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, class: 'form-control',autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :last_name%><br />
      <%= f.text_field :last_name, class: 'form-control',autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :Bio %><br />
      <%= f.text_area :bio, class: 'form-control',autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :Facebook_url %><br />
      <%= f.text_field :facebook_url,  class: 'form-control', autocomplete: "off" %>
    </div>
    <div class="form-group">
      <%= f.label :website_url %><br />
      <%= f.text_field :website_url,  class: 'form-control', autocomplete: "off" %>
    </div>
    <div class="form-group">
      <%= f.label :Twitter_url %><br />
      <%= f.text_field :twitter_url,  class: 'form-control', autocomplete: "off" %>
    </div>
    <div class="actions">
      <%= f.submit "update" %>
    </div>
  <% end %>
  </div>
  </div>
